<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_view_sections_dialog_layout"

    android:background="@color/lapis_lazuli"
    android:padding="16dp"

    >

    <TextView
        android:id="@+id/fragment_view_sections_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Class Sections"
        android:textColor="@color/white"
        android:textSize="12pt"

        android:layout_marginBottom="20dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fragment_view_sections_dialog_sections_list"
        />

    <ListView
        android:id="@+id/fragment_view_sections_dialog_sections_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toTopOf="@id/fragment_view_sections_dialog_exit_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_view_sections_dialog_title"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fragment_view_sections_dialog_exit_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"

        android:text="Exit"
        android:textColor="@color/black"

        android:background="@drawable/fragment_view_sections_dialog_exit_button_background"

        android:layout_marginVertical="20dp"

        app:layout_constraintTop_toBottomOf="@id/fragment_view_sections_dialog_sections_list"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>