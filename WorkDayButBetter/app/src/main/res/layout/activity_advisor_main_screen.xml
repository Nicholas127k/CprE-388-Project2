<!--        </LinearLayout>-->

    </androidx.constraintlayout.widget.ConstraintLayout>

    <GridLayout
        android:id="@+id/activity_advisor_main_screen_controls_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintVertical_bias="0"
        android:layout_marginVertical="40dp"
        android:layout_marginHorizontal="14dp"

        android:columnCount="2"
        android:layout_gravity="center"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_advisor_main_screen_navigation_bar_layout"
        >

        <LinearLayout
            android:id="@+id/activity_advisor_main_screen_add_class_button_layout"
            android:orientation="vertical"

            android:layout_width="150dp"
            android:layout_height="wrap_content"

            android:padding="20dp"
            android:layout_margin="20dp"

            android:layout_column="0"
            android:gravity="center"

            android:background="@drawable/activity_advisor_main_screen_control_button_background"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_format_list_bulleted_add_24"

                android:layout_marginVertical="6dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Create A Class"
                android:textColor="@color/white"

                android:layout_marginVertical="6dp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_advisor_main_screen_remove_class_button_layout"
            android:orientation="vertical"

            android:layout_width="150dp"
            android:layout_height="wrap_content"

            android:padding="20dp"
            android:layout_margin="20dp"

            android:layout_column="1"
            android:gravity="center"

            android:background="@drawable/activity_advisor_main_screen_control_button_background"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_playlist_remove_24"

                android:layout_marginVertical="6dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Remove A Class"
                android:textColor="@color/white"

                android:layout_marginVertical="6dp"
                />

        </LinearLayout>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>