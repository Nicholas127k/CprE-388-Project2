    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/activity_advisor_main_screen_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/french_gray"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_advisor_main_screen_navigation_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_margin="14dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/activity_advisor_main_screen_navigation_profile_button"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:background="@drawable/activity_advisor_main_screen_navigation_bar_button_background"
            android:src="@drawable/baseline_person_24"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

