<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lapis_lazuli"

    android:id="@+id/activity_login_screen_layout"
    >

    <TextView
        android:id="@+id/activity_login_screen_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Classify"
        android:textColor="@color/white"
        android:textSize="20pt"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/activity_login_screen_textedit_button_layout"

        />

    <LinearLayout
        android:id="@+id/activity_login_screen_textedit_button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/activity_login_screen_textedit_button_layout_background"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_margin="10dp"

        app:layout_constraintTop_toBottomOf="@id/activity_login_screen_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <EditText
            android:id="@+id/activity_login_screen_textedit_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/activity_login_screen_textedit_background"
            android:padding="14dp"
            android:hint="Username"
            android:textColorHint="@color/white"
            android:layout_marginVertical="10dp"
            />

        <EditText
            android:id="@+id/activity_login_screen_textedit_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/activity_login_screen_textedit_background"
            android:padding="14dp"
            android:hint="Password"
            android:textColorHint="@color/white"
            android:layout_marginVertical="10dp"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="60dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/activity_login_screen_button_login"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:text="Login"
            android:textSize="8pt"
            android:textColor="@color/black"
            android:background="@drawable/activity_login_screen_button_background"

            android:layout_marginVertical="12dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/activity_login_screen_button_signup"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:text="Sign Up"
            android:textSize="8pt"
            android:textColor="@color/black"
            android:background="@drawable/activity_login_screen_button_background"

            android:layout_marginVertical="12dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/activity_login_screen_button_create_institution"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:text="Create Institution"
            android:textSize="8pt"
            android:textColor="@color/black"
            android:background="@drawable/activity_login_screen_button_background"

            android:layout_marginVertical="12dp"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

