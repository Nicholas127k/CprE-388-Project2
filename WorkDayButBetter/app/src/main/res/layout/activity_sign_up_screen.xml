<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lapis_lazuli">

    <LinearLayout
        android:id="@+id/activity_signup_screen_navigation_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_margin="14dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/activity_signup_screen_navigation_back_button"

            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/activity_signup_screen_back_button_background"
            android:src="@drawable/baseline_arrow_back_24"
            android:layout_gravity="center"
            android:gravity="center"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/activity_signup_screen_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Sign Up"
        android:textSize="12pt"
        android:textColor="@color/white"

        android:layout_margin="20dp"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_signup_screen_navigation_bar_layout"
        app:layout_constraintBottom_toTopOf="@id/activity_signup_screen_edittext_layout"
        />

    <LinearLayout
        android:id="@+id/activity_signup_screen_edittext_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:padding="12dp"
        android:orientation="vertical"

        android:background="@drawable/activity_signup_screen_edittext_layout_background"

        app:layout_constraintTop_toBottomOf="@id/activity_signup_screen_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/activity_signup_screen_signup_button"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_marginVertical="20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Username"
                android:textColor="@color/white"
                android:textSize="8pt"
                />

            <EditText
                android:id="@+id/activity_signup_screen_username_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="Username"
                android:padding="10dp"
                android:textColorHint="@color/white"

                android:background="@drawable/activity_signup_screen_edittext_background"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_marginVertical="20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Email"
                android:textColor="@color/white"
                android:textSize="8pt"
                />

            <EditText
                android:id="@+id/activity_signup_screen_email_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="Email"
                android:padding="10dp"
                android:textColorHint="@color/white"

                android:background="@drawable/activity_signup_screen_edittext_background"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_marginVertical="20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Password"
                android:textColor="@color/white"
                android:textSize="8pt"
                />

            <EditText
                android:id="@+id/activity_signup_screen_password_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="Password"
                android:padding="10dp"
                android:textColorHint="@color/white"

                android:background="@drawable/activity_signup_screen_edittext_background"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_marginVertical="20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Confirm Password"
                android:textColor="@color/white"
                android:textSize="8pt"
                />

            <EditText
                android:id="@+id/activity_signup_screen_confirm_password_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="Password"
                android:padding="10dp"
                android:textColorHint="@color/white"

                android:background="@drawable/activity_signup_screen_edittext_background"
                />

        </LinearLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/activity_signup_screen_signup_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"

        android:background="@drawable/activity_signup_screen_signup_button_background"
        android:text="Sign Up"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_signup_screen_edittext_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>