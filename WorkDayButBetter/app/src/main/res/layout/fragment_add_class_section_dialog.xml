<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_add_class_section_dialog_layout"

    android:background="@color/lapis_lazuli"
    android:padding="16dp"
    >

    <TextView
        android:id="@+id/fragment_add_class_section_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Section Designer"
        android:textColor="@color/white"
        android:textSize="12pt"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/fragment_add_class_section_dialog_section_label_edittext"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:layout_margin="12dp"
        android:padding="12dp"

        android:background="@drawable/fragment_add_class_section_dialog_edittext_background"

        android:hint="Section Label"
        android:textColorHint="@color/black"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_add_class_section_dialog_title"
        />

    <LinearLayout
        android:id="@+id/fragment_add_class_section_dialog_days_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_marginVertical="20dp"

        app:layout_constraintTop_toBottomOf="@id/fragment_add_class_section_dialog_section_label_edittext"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

        <CheckBox
            android:id="@+id/fragment_add_class_section_dialog_monday_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Monday"
            android:textSize="12pt"
            android:textColor="@color/white"
            />

        <CheckBox
            android:id="@+id/fragment_add_class_section_dialog_tuesday_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Tuesday"
            android:textSize="12pt"
            android:textColor="@color/white"
            />

        <CheckBox
            android:id="@+id/fragment_add_class_section_dialog_wednesday_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Wednesday"
            android:textSize="12pt"
            android:textColor="@color/white"
            />

        <CheckBox
            android:id="@+id/fragment_add_class_section_dialog_thursday_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Thursday"
            android:textSize="12pt"
            android:textColor="@color/white"
            />

        <CheckBox
            android:id="@+id/fragment_add_class_section_dialog_friday_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Friday"
            android:textSize="12pt"
            android:textColor="@color/white"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To:"
                android:textColor="@color/white"
                android:textSize="10pt"
                />

            <EditText
                android:id="@+id/fragment_add_class_section_dialog_to_time_edittext"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From:"
                android:textColor="@color/white"
                android:textSize="10pt"
                />

            <EditText
                android:id="@+id/fragment_add_class_section_dialog_from_time_edittext"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:gravity="center"

            android:layout_marginVertical="20dp"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/fragment_add_class_section_dialog_create_section_button"
                android:layout_width="150dp"
                android:layout_height="wrap_content"

                android:layout_marginHorizontal="10dp"

                android:background="@drawable/fragment_add_class_section_dialog_buttons_background"

                android:text="Add Section"
                android:textSize="8pt"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/fragment_add_class_section_dialog_cancel_section_button"
                android:layout_width="150dp"
                android:layout_height="wrap_content"

                android:layout_marginHorizontal="10dp"

                android:background="@drawable/fragment_add_class_section_dialog_buttons_background"

                android:text="Cancel"
                android:textSize="8pt"
                />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>