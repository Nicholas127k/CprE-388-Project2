<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/activity_user_profile_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/french_gray"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_user_profile_navigation_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_margin="14dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/activity_user_profile_navigation_back_button"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:background="@drawable/activity_user_profile_navigation_bar_button_background"
            android:src="@drawable/baseline_arrow_back_24"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >

<!--            <androidx.appcompat.widget.AppCompatImageButton-->
<!--                android:id="@+id/activity_user_profile_navigation_add_class_button"-->
<!--                android:layout_width="50dp"-->
<!--                android:layout_height="50dp"-->

<!--                android:layout_marginHorizontal="6dp"-->

<!--                android:background="@drawable/activity_student_main_navigation_bar_button_background"-->
<!--                android:src="@drawable/baseline_format_list_bulleted_add_24"-->
<!--                />-->

<!--            <androidx.appcompat.widget.AppCompatImageButton-->
<!--                android:id="@+id/activity_student_main_navigation_schedule_button"-->
<!--                android:layout_width="50dp"-->
<!--                android:layout_height="50dp"-->

<!--                android:layout_marginHorizontal="6dp"-->

<!--                android:background="@drawable/activity_student_main_navigation_bar_button_background"-->
<!--                android:src="@drawable/baseline_schedule_24"-->
<!--                />-->

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/activity_user_profile_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="User Profile"
        android:textColor="@color/white"
        android:textSize="14pt"

        android:layout_marginVertical="40dp"

        app:layout_constraintTop_toBottomOf="@id/activity_user_profile_navigation_bar_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <LinearLayout
        android:id="@+id/activity_user_profile_data_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_marginVertical="60dp"
        android:layout_marginHorizontal="20dp"

        app:layout_constraintTop_toBottomOf="@id/activity_user_profile_title_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >

        <TextView
            android:id="@+id/activity_user_profile_username_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginVertical="6dp"

            android:text="Username:"
            android:textColor="@color/black"
            android:textSize="10pt"
            />

        <TextView
            android:id="@+id/activity_user_profile_email_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginVertical="6dp"

            android:text="Email:"
            android:textColor="@color/black"
            android:textSize="10pt"
            />

        <TextView
            android:id="@+id/activity_user_profile_firstname_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginVertical="6dp"

            android:text="Firstname:"
            android:textColor="@color/black"
            android:textSize="10pt"
            />

        <TextView
            android:id="@+id/activity_user_profile_lastname_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginVertical="6dp"

            android:text="Lastname:"
            android:textColor="@color/black"
            android:textSize="10pt"
            />

        <TextView
            android:id="@+id/activity_user_profile_usertype_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginVertical="6dp"

            android:text="User Type:"
            android:textColor="@color/black"
            android:textSize="10pt"
            />

        <TextView
            android:id="@+id/activity_user_profile_institution_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginVertical="6dp"

            android:text="Institution:"
            android:textColor="@color/black"
            android:textSize="10pt"
            />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/activity_user_profile_logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/activity_user_profile_navigation_bar_button_background"

        android:text="Logout"
        android:textColor="@color/white"
        android:textSize="10pt"
        android:padding="15dp"

        app:layout_constraintTop_toBottomOf="@id/activity_user_profile_data_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>